._play-video
  background: url(../img/play.png) 0 0 no-repeat;
  position: absolute;
  left: 50%;
  top: 50%;
  margin-top: -60px;
  margin-left: -60px;
  z-index: 2;
  width: 121px;
  height: 121px;

._video-wrap
  position: relative;

  &:hover
    cursor: pointer;

  & figure
    position: relative;

  & figure:after
    content: '';
    position: absolute;
    z-index: 1;
    background: -moz-linear-gradient(top, rgba(0,0,0,0) 0%, rgba(0,0,0,0.75) 100%); /* FF3.6-15 */
    background: -webkit-linear-gradient(top, rgba(0,0,0,0) 0%,rgba(0,0,0,0.75) 100%); /* Chrome10-25,Safari5.1-6 */
    background: linear-gradient(to bottom, rgba(0,0,0,0) 0%,rgba(0,0,0,0.75) 100%); /* W3C, IE10+, FF16+, Chrome26+, Opera12+, Safari7+ */
    width: 100%;
    height: 50px;
    bottom: 0;
    display: block;
    opacity: 0;
    //transition: opacity .5s ease-out, height 1s ease-out, background 1s ease-out;
    transition: opacity .5s ease-out, background 1s ease-out;

  &:hover figure:after
    opacity: 1;

  &._faded figure:after
    height: 100%;
    opacity: 1;
    background: rgba(0,0,0,0.75);

._video-iframe-wrap
  opacity: 0;
  visibility: hidden;
  position: absolute;
  z-index: 3;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  transition: visibility 0s linear 0.5s,opacity 0.5s linear;

  & iframe
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);

  &._fadein
    visibility: visible;
    opacity: 1;
    transition-delay: 0s;

._video-close
  &
    cursor: pointer;
    //visibility: hidden;
    width: 20px;
    height: 20px;
    font-size: 13px;
    line-height: 20px;
    color: #fff;
    border: 2px solid #fff;
    border-radius: 100%;
    letter-spacing: 1px;
    position: absolute;
    z-index: 4;
    top: 20px;
    right: 20px;

  &:before
    content: 'X';
    display: block;
    position: absolute;
    top: -1px;
    left: 4px;
    width: 15px;
    height: 12px;

.list li
  color: rgb(255, 204, 51);

  & > p
    color: #000;

