@import 'fonts'



.html
.body
  margin: 0;
  padding: 0;

#container
 opacity 0

.storm
  position absolute;
  left 0
  right 0
  height 100vh;
  z-index 100
  .preloader-wrap
    position absolute
    top 0
    left 0
    right 0
