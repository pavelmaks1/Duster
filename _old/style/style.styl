  }
  ._sand-top {
    background-position: right -157px;
  }
  ._sand-middle-left-1 {
    width: 395px;
    height: 163px;
    background-size: auto auto;
  }
  ._sand-middle-right1 {
    background-image: url(../img/sand-middle-right1.png);
    background-repeat: no-repeat;
    display: block;
    width: 270px;
    height: 346px;
